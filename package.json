{
  "name": "onfetch",
  "version": "0.7.5",
  "description": "Mock fetch() with native Request / Response API. Works with globalThis, service worker, @mswjs/interceptors, and custom contexts",
  "types": "./build/index.d.ts",
  "main": "./build/index.js",
  "type": "module",
  "browser": {
    "./src/lib/MSWInterceptors/index.js": false,
    "./build/lib/MSWInterceptors": false,
    "./test/node/setup.js": false,
    "jest-message-util": false,
    "jest-util": false
  },
  "exports": {
    ".": "./build/index.js",
    "./sw": "./build/sw.js",
    "./core": "./build/core.js",
    "./lib/*": "./build/lib/*.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./build/index.d.ts"
      ],
      "sw": [
        "./build/sw.d.ts"
      ],
      "core": [
        "./build/core.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "prepare": "npm run build",
    "test-browser": "playwright-test \"test/**/*.test.*\" \"!test/**/node\" --sw src/sw.ts",
    "test-node": "mocha --experimental-abortcontroller",
    "test": "npm run test-browser && npm run test-node"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mock",
    "fetch",
    "test",
    "testing",
    "service",
    "worker",
    "server",
    "spy"
  ],
  "author": "PaperStrike",
  "repository": "github:PaperStrike/onfetch",
  "license": "ISC",
  "peerDependencies": {
    "@mswjs/interceptors": "~0.16.0"
  },
  "peerDependenciesMeta": {
    "@mswjs/interceptors": {
      "optional": true
    }
  },
  "devDependencies": {
    "@mswjs/interceptors": "~0.16.0",
    "@types/mocha": "^9.1.1",
    "@types/serviceworker": "^0.0.46",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@typescript/lib-dom": "npm:@types/web@^0.0.67",
    "error-cause": "^1.0.4",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "expect": "^28.1.0",
    "mocha": "^10.0.0",
    "node-fetch": "^3.2.4",
    "playwright-fixtures": "^0.3.5",
    "playwright-test": "^8.0.0",
    "sirv": "^2.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
