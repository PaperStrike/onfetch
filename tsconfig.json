{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["serviceworker"],
    "useDefineForClassFields": true
  },
  "include": ["./src"],
  "ts-node": {
    "transpileOnly": true
  }
}
